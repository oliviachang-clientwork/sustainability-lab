{%- if block.type == "smk_big_banners" -%}{%- assign item = block.settings -%}
{%- assign b_i = block.settings -%}
{%- if item.show_section -%}
<div class="shopify-section smk-content">
  <div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}smk-offset-small {% endif %}container-indent sectionbigbanners{{ block.id }}">
