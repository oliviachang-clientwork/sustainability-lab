      <div class="{% if item.fullwidth %}row{% endif %} no-gutter">

        {%- for i in (1..3) -%}
            {%- assign smk_block_type = 'big_banners' -%}
            {%- assign show = smk_block_type | append: '_' | append: i | append: '_' | append: 'show' -%}
